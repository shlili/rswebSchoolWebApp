@model MVCSchoolApp.ViewModels.StudentFilter

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
<p>
<a asp-action="Create">Create New</a>
</p>
}

<form asp-controller="Students" asp-action="Index" method="get">
    <p>
        First Name: <input type="text" asp-for="StudentFName" />
        First Name: <input type="text" asp-for="StudentLName" />
        Index: <input type="text" asp-for="StudentIndex" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].CurrentSemester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EducationLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                    <img src="~/images/@item.ProfilePicture"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                    @item.FullName
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcquiredCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSemester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    { <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> } |
                <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    { <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a> }
            </td>
        </tr>
}
    </tbody>
</table>
